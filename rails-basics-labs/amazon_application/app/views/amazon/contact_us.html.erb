<h1>Contact Us</h1>

<%= form_tag contact_path, method: "GET" do %>
    <%= label_tag :name %>
    <%= text_field_tag :name %>
    <%= label_tag :email %>
    <%= text_field_tag :email %>
    <%= submit_tag %>
<%end%> 

<% if @name && @email %>
    <h1>Thank you for submitting <%= @name %>!</h1>
<% end %>